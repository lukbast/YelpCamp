<% layout('layouts/boilerplate')%>
<div class="d-flex">
    <div class="row">
        <h1 class="text-center mb-5">Edit Campground</h1>
        <div class="col-xl-4 offset-xl-1 col-md-6">
            <form action="/campgrounds/<%=camp._id%>/edit?__method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="text">Title</label>
                    <input class="form-control" type="text" id="title" name="campground[title]" value="<%= camp.title %>" required>
                    <div class="valid-feedback">Looks correct!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]" value="<%= camp.location %>" required >
                    <div class="valid-feedback">Looks correct!</div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="text" id="price" class="form-control" name="campground[price]" value="<%= camp.price %>" required >
                        <div class="valid-feedback">Looks correct!</div>
                      </div>
                </div>
                
                <div class="mb-3">
                    <label class="form-label" for="images">Add images</label>
                    <input class="form-control" type="file" id="images" name="image" multiple>
                    <div class="valid-feedback">Looks correct!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" id="description" name="campground[description]" required><%= camp.description %></textarea>
                    <div class="valid-feedback">Looks correct!</div>
                </div>
                <div class="mb-3">  
                    <button class="btn btn-info">Edit campground</button>
                </div>
            
        </div> 
        <div class="col-xl-4 offset-xl-1 col-md-6">
            <div class="mb-3">
                <% camp.images.forEach(function(img, i){ %>
                    <img class="img-thumbnail" src="<%=img.thumbnail%>" alt="">
                    <div class="form-check d-inline">
                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                    </div>
                    <label for="image-<%=i%>">Delete?</label>
               <% }) %>
            </div>
        </div>
    </form>
    </div>
</div>
    
    