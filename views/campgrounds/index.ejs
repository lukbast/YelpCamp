<% layout('layouts/boilerplate') %>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
    const cmps = {features: <%- JSON.stringify(campgrounds)%>} //fake error
  </script>

<div id="map" style='width: 100%; height: 500px;'></div>
    <h1 class='text-center my-3'>All Campgrounds</h1>
        <% for(let camp of campgrounds ) {%>
            <div class='card mb-3'>
                <div class='row'>
                    <div class="col-md-4">

                    <% if(camp.images.length) {%>
                        <img class='img-fluid' src="<%= camp.images[0].url%>" alt="">
                        <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%=camp.title%></h5>
                            <p class='card-text'><%=camp.description%></p>
                            <p class='card-text'>
                                <small class='text-muted'><%=camp.location%></small>
                            </p>

                            <a class="btn btn-primary" href="/campgrounds/<%=camp._id%>"><%=camp.title%></a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
        <script src="/js/clusterMap.js"></script>
      
    

